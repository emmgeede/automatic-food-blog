  }

  {
    difficulty && (
      <div class="flex flex-col gap-2">
        <div class="flex flex-row gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <span>
            <strong class="text-gray-900">{difficultyMap[difficulty] || difficulty}</strong>
          </span>
        </div>
        <div class="text-xs font-bold text-gray-500">Schwierigkeit</div>
