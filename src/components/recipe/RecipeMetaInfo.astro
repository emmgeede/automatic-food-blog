---
interface Props {
  cookTime?: string;
  cuisine?: string;
  servings?: number | string;
  difficulty?: string;
}

const { cookTime, cuisine, servings, difficulty } = Astro.props;

// Convert ISO 8601 duration to minutes
function parseDuration(duration?: string): number | null {
  if (!duration) return null;
  const match = duration.match(/PT(\d+)M/);
  return match ? parseInt(match[1]) : null;
}

const totalMinutes = parseDuration(cookTime);

// Map difficulty to display text
const difficultyMap: Record<string, string> = {
  einfach: "Einfach",
  mittel: "Mittel",
  schwer: "Fortgeschritten",
};
---

<div class="flex flex-wrap justify-between text-sm text-gray-600">
  {
    totalMinutes && (
      <div class="flex flex-col gap-2">
        <div class="flex flex-row gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <span>
            <strong class="text-gray-900">{totalMinutes} min</strong>
          </span>
        </div>
        <div class="text-xs font-bold text-gray-500">Kochzeit</div>
      </div>
    )
  }

  {
    cuisine && (
      <div class="flex flex-col gap-2">
        <div class="flex flex-row gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-500"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
