  }
};
---

<nav class="bg-accent/5 rounded-lg p-3" aria-label="Inhaltsverzeichnis">
  <ul class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-1.5" role="list">
    {items.map((item) => (
      <li>
        <a
          href={`#${item.id}`}
          class="toc-link flex flex-col items-center gap-1.5 text-gray-700 hover:text-accent transition-all py-2 px-3 rounded-lg hover:bg-white hover:shadow-md group min-w-[75px]"
          data-target={item.id}
          title={item.label}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 text-gray-600 group-hover:text-accent transition-colors"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
            set:html={getIconSvg(item.iconType)}
          />
          <span class="text-xs font-medium text-center leading-tight">{item.label}</span>
        </a>
      </li>
    ))}
  </ul>
</nav>

<script>
  import { trackButtonClick } from "../../utils/matomoTracking";

  // Smooth scroll to sections
  document.addEventListener('DOMContentLoaded', () => {
    const links = document.querySelectorAll('.toc-link');

    links.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const target = (link as HTMLAnchorElement).dataset.target;
        const label = (link as HTMLAnchorElement).textContent?.trim() || target;

        // Track TOC navigation
        if (target && label) {
          trackButtonClick('TOC Navigation', `To ${label}`);
        }

        if (target) {
          const element = document.getElementById(target);
          if (element) {
            element.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
            // Update URL without jumping
            history.pushState(null, '', `#${target}`);

            // Focus element for accessibility
            element.setAttribute('tabindex', '-1');
            element.focus();
          }
        }
      });
    });

    // Highlight active section on scroll
    const sections = document.querySelectorAll('[id]');
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const id = entry.target.getAttribute('id');
          const tocLink = document.querySelector(`.toc-link[data-target="${id}"]`);

          if (entry.isIntersecting && tocLink) {
            // Remove active class from all links
            document.querySelectorAll('.toc-link').forEach(link => {
              link.classList.remove('text-accent', 'bg-accent/10', 'font-semibold');
            });

            // Add active class to current link
            tocLink.classList.add('text-accent', 'bg-accent/10', 'font-semibold');
          }
        });
      },
      {
        rootMargin: '-100px 0px -80% 0px',
        threshold: 0
      }
    );

    sections.forEach((section) => {
      if (section.id) {
        observer.observe(section);
      }
    });
  });
</script>

<style>
  .toc-link {
    scroll-margin-top: 100px;
  }
</style>
