interface TocItem {
  id: string;
  label: string;
  iconType?: 'introduction' | 'facts' | 'ingredients' | 'directions' | 'nutrition' | 'tips';
}

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;

// SVG Icons mapping
