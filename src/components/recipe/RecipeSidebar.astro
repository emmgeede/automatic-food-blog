---
import { getCollection } from "astro:content";
import { getCategoryUrl } from "../../utils/categoryUtils";

interface Props {
  currentSlug: string;
  currentCategories?: string[];
}

const { currentSlug, currentCategories = [] } = Astro.props;

// Get all blog entries for related recipes and latest posts
const allBlogEntries = await getCollection("blog");

// Get related recipes (same category, excluding current)
const relatedRecipes = allBlogEntries
  .filter((entry) => {
    if (entry.data.metadata.slug === currentSlug) return false;
    const entryCategories = entry.data.taxonomy?.categories || [];
    return entryCategories.some((cat) => currentCategories.includes(cat));
  })
  .slice(0, 3);

// Get latest posts
const latestPosts = allBlogEntries
  .sort((a, b) => {
    const dateA = new Date(a.data.metadata.pubDate);
    const dateB = new Date(b.data.metadata.pubDate);
    return dateB.getTime() - dateA.getTime();
  })
  .filter((entry) => entry.data.metadata.slug !== currentSlug)
  .slice(0, 4);

// Get all unique categories
const allCategories = Array.from(
  new Set(
    allBlogEntries.flatMap((entry) => entry.data.taxonomy?.categories || [])
  )
).slice(0, 10);
---

<aside class="space-y-8">
  <!-- Related Recipes -->
  {relatedRecipes.length > 0 && (
    <section class="bg-white rounded-lg p-6 shadow-sm">
      <h3 class="text-xl font-bold text-gray-900 mb-4 pb-2 border-b border-gray-200 uppercase tracking-wide text-sm">
        Rezepte
      </h3>
      <div class="space-y-4">
        {relatedRecipes.map((recipe) => (
          <a
            href={`/rezepte/${recipe.data.metadata.slug}`}
            class="flex gap-3 group hover:bg-gray-50 p-2 rounded-lg transition-colors"
          >
            <div class="flex-shrink-0 w-20 h-20 rounded-lg overflow-hidden">
              <img
                src={recipe.data.images?.featured?.src || '/placeholder.jpg'}
