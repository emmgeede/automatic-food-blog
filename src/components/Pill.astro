---
interface Props {
  link: string;
  ariaLabel: string;
  label: string;
}

const { link, label, ariaLabel } = Astro.props;
---

<a
  href={link}
  aria-label={ariaLabel}
  class="text-sm min-w-11 min-h-11 bg-neutral-200 border-none py-2.5 px-8 text-center inline-flex no-underline items-center justify-center cursor-pointer rounded-full transition-all duration-300 ease-in-out focus-visible:outline-[3px] focus-visible:outline-neutral-200 focus-visible:outline-offset-2 hover:bg-neutral-400 hover:-translate-y-0.5 hover:shadow-[0_2px_8px_rgba(0,0,0,0.15)] active:translate-y-0 active:bg-neutral-300 contrast-more:bg-black contrast-more:text-white contrast-more:border-2 contrast-more:border-white motion-reduce:transition-none motion-reduce:hover:transform-none"
>
  {label}
</a>
