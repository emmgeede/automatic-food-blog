---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

// Get latest 8 recipes
const allRecipes = await getCollection("blog");
const latestRecipes = [...allRecipes]
  .sort((a, b) => {
    const dateA = a.data.metadata?.pubDate || new Date(0);
    const dateB = b.data.metadata?.pubDate || new Date(0);
    return dateB.getTime() - dateA.getTime();
  })
  .slice(0, 8);

// Site info
const siteTitle = "Die Mama kocht";
const siteBio = "Leckere Rezepte für jeden Tag - von klassisch bis kreativ";

// Additional static links
const staticLinks = [
  { label: "Alle Rezepte", url: "/filter" },
  { label: "Kategorien", url: "/kategorien" },
  { label: "Über uns", url: "/ueber-uns" },
  { label: "Newsletter", url: "/#newsletter" },
];

// Social links (optional - add your real links here)
const socialLinks = [
  // { platform: "Instagram", url: "https://instagram.com/...", icon: "instagram" },
  // { platform: "Facebook", url: "https://facebook.com/...", icon: "facebook" },
  // { platform: "Pinterest", url: "https://pinterest.com/...", icon: "pinterest" },
];
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{siteTitle} - Links</title>
    <meta name="description" content={siteBio} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      @import url("/src/styles/global.css");
    </style>
  </head>
  <body class="bg-gradient-to-br from-gray-50 via-white to-gray-50 min-h-screen">
    <div class="max-w-md mx-auto px-5 py-10">

      <!-- Header Section -->
      <header class="text-center mb-10">
        <!-- Logo/Profile Image -->
        <div class="mb-6">
          <div class="w-28 h-28 mx-auto rounded-full bg-gradient-to-br from-primary to-primary-light flex items-center justify-center text-white shadow-2xl ring-4 ring-white ring-offset-4 ring-offset-gray-50 hover:scale-105 transition-transform duration-300">
            <Icon
              class="w-16 h-16"
              name="simple-icons:apacheguacamole"
            />
          </div>
        </div>

        <!-- Site Title -->
        <h1 class="text-3xl font-bold text-gray-900 mb-3 tracking-tight">{siteTitle}</h1>

        <!-- Bio -->
        <p class="text-gray-600 text-base px-4 leading-relaxed">{siteBio}</p>
      </header>

      <!-- Latest Recipes Grid -->
      <section class="mb-10">
        <h2 class="text-xl font-bold text-gray-900 mb-5 px-1">Neueste Rezepte</h2>
        <div class="grid grid-cols-2 gap-4">
          {latestRecipes.map((recipe) => (
            <a
              href={`/rezepte/${recipe.data.metadata?.slug}`}
              class="group block bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1.5 border border-gray-100"
            >
              {recipe.data.images?.featured?.src && (
                <div class="relative aspect-square overflow-hidden bg-gray-100">
                  <Image
                    src={recipe.data.images.featured.src}
                    alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                    width={400}
                    height={400}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              )}
              <div class="p-4">
                <h3 class="text-sm font-bold text-gray-900 line-clamp-2 group-hover:text-accent transition-colors leading-snug">
                  {recipe.data.metadata?.title}
                </h3>
                {recipe.data.taxonomy?.categories?.[0] && (
                  <p class="text-xs text-gray-500 mt-2 font-medium uppercase tracking-wide">
                    {recipe.data.taxonomy.categories[0]}
                  </p>
                )}
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Static Links -->
      <section class="mb-10 space-y-4">
        {staticLinks.map((link) => (
          <a
            href={link.url}
            class="block w-full bg-white text-center py-4 px-6 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 font-bold text-gray-900 hover:text-white hover:bg-accent border-2 border-gray-100 hover:border-accent text-lg"
          >
            {link.label}
          </a>
        ))}
      </section>

      <!-- Social Links (if available) -->
      {socialLinks.length > 0 && (
        <section class="mb-10">
          <div class="flex justify-center gap-5">
            {socialLinks.map((social) => (
              <a
                href={social.url}
                target="_blank"
                rel="noopener noreferrer"
                class="w-14 h-14 bg-white rounded-full shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 flex items-center justify-center text-gray-700 hover:text-accent hover:bg-accent hover:text-white border-2 border-gray-100 hover:border-accent"
                aria-label={social.platform}
              >
                {social.icon === 'instagram' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
                {social.icon === 'facebook' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {social.icon === 'pinterest' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.162-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.401.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.354-.629-2.758-1.379l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.607 0 11.985-5.365 11.985-11.987C23.97 5.39 18.592.026 11.985.026L12.017 0z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </section>
      )}

      <!-- Footer -->
      <footer class="text-center text-sm text-gray-500 mt-16 pb-10 border-t border-gray-200 pt-8">
        <p class="font-medium">&copy; {new Date().getFullYear()} {siteTitle}</p>
        <div class="mt-3 space-x-4">
          <a href="/impressum" class="hover:text-accent transition-colors font-medium">Impressum</a>
          <span class="text-gray-300">•</span>
          <a href="/datenschutz" class="hover:text-accent transition-colors font-medium">Datenschutz</a>
        </div>
      </footer>

    </div>

    <style>
      .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </body>
</html>
