---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import "../styles/global.css";

// Get latest 8 recipes
const allRecipes = await getCollection("blog");
const latestRecipes = [...allRecipes]
  .sort((a, b) => {
    const dateA = a.data.metadata?.pubDate || new Date(0);
    const dateB = b.data.metadata?.pubDate || new Date(0);
    return dateB.getTime() - dateA.getTime();
  })
  .slice(0, 8);

// Site info
const siteTitle = "Die Mama kocht";
const siteBio = "Leckere Rezepte fÃ¼r jeden Tag - von klassisch bis kreativ";

