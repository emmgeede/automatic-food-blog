---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{siteTitle} - Links</title>
    <meta name="description" content={siteBio} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-primary min-h-screen">
    <div class="max-w-lg mx-auto px-4 py-8">

      <!-- Header Section -->
      <header class="text-center mb-8">
        <!-- Logo -->
        <a href="/" class="inline-flex flex-col items-center gap-3 group">
          <div class="w-20 h-20 rounded-full bg-white/10 flex items-center justify-center group-hover:bg-white/20 transition-colors duration-300">
            <Icon
              class="w-12 h-12 text-accent"
              name="simple-icons:apacheguacamole"
            />
          </div>
          <h1 class="text-2xl font-bold text-white">{siteTitle}</h1>
        </a>
        <p class="text-gray-300 text-sm mt-2">{siteBio}</p>

        <!-- Social Media Links -->
        <div class="flex justify-center gap-4 mt-4">
          <a
            href="https://www.instagram.com/diemamakochtde/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 flex items-center justify-center bg-white/10 hover:bg-accent rounded-xl transition-all duration-300 hover:scale-110"
            aria-label="Instagram folgen"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" fill-rule="evenodd"/>
            </svg>
          </a>
          <a
            href="https://de.pinterest.com/diemamakocht/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 flex items-center justify-center bg-white/10 hover:bg-accent rounded-xl transition-all duration-300 hover:scale-110"
            aria-label="Pinterest folgen"
          >
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </header>

      <!-- Static Links -->
      <section class="mb-8 space-y-3">
        {staticLinks.map((link) => (
          <a
            href={link.url}
            class="flex items-center justify-center gap-3 w-full bg-white text-primary py-4 px-6 rounded-xl font-bold hover:bg-accent hover:text-white transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]"
          >
            <span class="text-xl">{link.icon}</span>
            <span>{link.label}</span>
          </a>
        ))}
      </section>

      <!-- Recipe Grid -->
      <section class="mb-8">
        <h2 class="text-lg font-bold text-white mb-4 text-center">Neueste Rezepte</h2>
        <div class="grid grid-cols-2 gap-3">
          {latestRecipes.map((recipe) => (
            <a
              href={`/rezepte/${recipe.data.metadata?.slug}`}
              class="group block rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-[1.03]"
            >
              <div class="relative aspect-square bg-gray-800">
                {recipe.data.images?.featured?.src && (
                  <Image
                    src={recipe.data.images.featured.src}
                    alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                    width={300}
                    height={300}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                )}
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3">
                  <h3 class="text-white text-sm font-bold leading-tight line-clamp-2">
                    {recipe.data.metadata?.title}
                  </h3>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Footer -->
      <footer class="text-center text-xs text-gray-400 pt-6 border-t border-white/10">
        <p>&copy; {new Date().getFullYear()} {siteTitle}</p>
        <div class="mt-2 space-x-3">
          <a href="/impressum" class="hover:text-accent transition-colors">Impressum</a>
          <span class="text-gray-600">â€¢</span>
          <a href="/datenschutz" class="hover:text-accent transition-colors">Datenschutz</a>
        </div>
      </footer>

    </div>

    <style>
      .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    </style>
  </body>
</html>
