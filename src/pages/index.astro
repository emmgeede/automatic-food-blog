                <div class="absolute top-4 left-4">
                  <span class="inline-flex items-center justify-center w-10 h-10 bg-accent text-white font-bold rounded-full">
                    {index + 1}
                  </span>
                </div>
                <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                  <h3 class="font-bold text-lg leading-tight">
                    {recipe.data.metadata?.title}
                  </h3>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Vegan Recipes Section -->
        {veganRecipes.length > 0 && (
          <section>
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-3xl font-bold text-gray-900">Vegetarische Rezepte</h2>
              <a href={getCategoryUrl('Vegetarisch')} class="text-accent hover:text-accent-dark font-semibold">
                Alle anzeigen ‚Üí
              </a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {veganRecipes.map((recipe, index) => (
                <article class={index === 0 ? 'md:row-span-2' : ''}>
                  <a
                    href={`/rezepte/${recipe.data.metadata?.slug}`}
                    class="block bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300"
                  >
                    {recipe.data.images?.featured?.src && (
                      <div class={`relative overflow-hidden ${index === 0 ? 'aspect-square' : 'aspect-video'}`}>
                        <Image
                          src={recipe.data.images.featured.src}
                          alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                          width={index === 0 ? 800 : 600}
                          height={index === 0 ? 800 : 400}
                          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                    )}
                    <div class="p-6">
                      <span class="text-green-600 text-xs font-semibold uppercase tracking-wide">
                        Vegetarisch
                      </span>
                      <h3 class="text-xl font-bold text-gray-900 mt-2 mb-2 hover:text-accent transition-colors">
                        {recipe.data.metadata?.title}
                      </h3>
                      {index === 0 && recipe.data.metadata?.description && (
                        <p class="text-gray-600 text-sm line-clamp-3 mb-4">
                          {recipe.data.metadata.description}
                        </p>
                      )}
                      <div class="flex items-center gap-4 text-sm text-gray-600">
                        {(recipe.data.timing?.totalTime || recipe.data.timing?.cookTime) && (
                          <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                            </svg>
                            {parseDuration(recipe.data.timing.totalTime || recipe.data.timing.cookTime)}
                          </span>
                        )}
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </section>
        )}

        <!-- Prepare Under 30 Minutes Section -->
        {quickRecipes.length > 0 && (
          <section class="bg-gray-900 rounded-2xl p-8 text-white">
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-3xl font-bold">Schnelle Rezepte unter 30 Minuten</h2>
              <a href="/rezepte" class="text-accent hover:text-accent-dark font-semibold">
                Alle anzeigen ‚Üí
              </a>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {quickRecipes.map((recipe) => (
                <a
                  href={`/rezepte/${recipe.data.metadata?.slug}`}
                  class="group"
                >
                  {recipe.data.images?.featured?.src && (
                    <div class="relative aspect-video overflow-hidden rounded-lg mb-3">
                      <Image
                        src={recipe.data.images.featured.src}
                        alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                        width={400}
                        height={300}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <h3 class="font-bold text-base mb-1 group-hover:text-accent transition-colors line-clamp-2">
                    {recipe.data.metadata?.title}
                  </h3>
                  {(recipe.data.timing?.totalTime || recipe.data.timing?.cookTime) && (
                    <p class="text-sm text-gray-400">
                      {parseDuration(recipe.data.timing.totalTime || recipe.data.timing.cookTime)}
                    </p>
                  )}
                </a>
              ))}
            </div>
          </section>
        )}

        <!-- Editors Selection Section -->
        <section class="bg-gray-50 rounded-2xl p-8">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-gray-900">Redaktions-Auswahl</h2>
            <a href="/rezepte" class="text-accent hover:text-accent-dark font-semibold">
              Alle anzeigen ‚Üí
            </a>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[...allRecipes].slice(0, 6).reverse().map((recipe) => (
              <article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
                <a href={`/rezepte/${recipe.data.metadata?.slug}`}>
                  {recipe.data.images?.featured?.src && (
                    <div class="relative aspect-video overflow-hidden">
                      <Image
                        src={recipe.data.images.featured.src}
                        alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                        width={600}
                        height={400}
