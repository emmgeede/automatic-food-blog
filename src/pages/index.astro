                        <Image
                          src={recipe.data.images.featured.src}
                          alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                          width={200}
                          height={200}
                          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                    )}
                    <div class="flex-1 p-4 flex flex-col justify-center">
                      <h3 class="text-lg font-bold text-gray-900 mb-2 hover:text-accent transition-colors line-clamp-2">
                        {recipe.data.metadata?.title}
                      </h3>
                      {recipe.data.metadata?.description && (
                        <p class="text-sm text-gray-600 line-clamp-3">
                          {recipe.data.metadata.description}
                        </p>
                      )}
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </section>
        )}

        <!-- Newsletter Section -->
        <section class="bg-gray-50 rounded-2xl p-12 text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Newsletter</h2>
          <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
            Melde dich f√ºr unseren Newsletter an und verpasse keine neuen Rezepte und Kochtipps!
          </p>
          <form class="max-w-md mx-auto">
            <div class="flex gap-3">
              <input
                type="email"
                placeholder="Deine E-Mail-Adresse"
                class="flex-1 px-6 py-3 rounded-lg border-2 border-gray-200 focus:border-accent focus:outline-none"
                aria-label="E-Mail-Adresse"
              />
              <button
                type="submit"
                class="px-8 py-3 bg-accent text-white font-semibold rounded-lg hover:bg-accent-dark transition-colors"
              >
                Anmelden
              </button>
            </div>
            <p class="text-xs text-gray-500 mt-3">
              Mit der Anmeldung stimmst du unseren Datenschutzbestimmungen zu.
            </p>
          </form>
        </section>

      </div>

      <!-- Sidebar (1/3) - Trending Recipes -->
      <aside class="lg:col-span-1">
        <div class="sticky top-8">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Trending Rezepte</h3>
          <div class="space-y-4">
            {trendingRecipes.map((recipe) => (
              <article class="flex gap-4 bg-white rounded-lg p-4 shadow-md hover:shadow-lg transition-shadow duration-300">
                <a href={`/rezepte/${recipe.data.metadata?.slug}`} class="flex gap-4 w-full">
                  {recipe.data.images?.featured?.src && (
                    <div class="relative w-20 h-20 flex-shrink-0 overflow-hidden rounded-lg">
                      <Image
                        src={recipe.data.images.featured.src}
                        alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                        width={100}
                        height={100}
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="flex-1 min-w-0">
                    {recipe.data.taxonomy?.categories?.[0] && (
                      <span class="text-accent text-xs font-semibold uppercase tracking-wide">
                        {recipe.data.taxonomy.categories[0]}
                      </span>
                    )}
                    <h4 class="text-sm font-bold text-gray-900 mt-1 line-clamp-2 hover:text-accent transition-colors">
                      {recipe.data.metadata?.title}
                    </h4>
                    {(recipe.data.timing?.totalTime || recipe.data.timing?.cookTime) && (
                      <p class="text-xs text-gray-600 mt-1">
                        {parseDuration(recipe.data.timing.totalTime || recipe.data.timing.cookTime)}
                      </p>
                    )}
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </aside>
    </div>
  </div>
</BaseLayout>

