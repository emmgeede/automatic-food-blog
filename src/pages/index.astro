---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCategoryUrl } from "../utils/categoryUtils";

// Get all blog entries
const allRecipes = await getCollection("blog");

// Sort by publication date
const sortedByDate = [...allRecipes].sort((a, b) => {
  const dateA = a.data.metadata?.pubDate || new Date(0);
  const dateB = b.data.metadata?.pubDate || new Date(0);
  return dateB.getTime() - dateA.getTime();
});

// Latest recipes (for Latest Recipes section)
const latestRecipes = sortedByDate.slice(0, 6);

// Featured recipes for hero slider (newest 5)
const heroRecipes = sortedByDate.slice(0, 5);

// Trending recipes for sidebar (6-11)
const trendingRecipes = sortedByDate.slice(5, 11);

// Vegan recipes
const veganRecipes = allRecipes.filter(recipe =>
  recipe.data.taxonomy?.categories?.includes("Vegetarisch")
).slice(0, 4);

// Quick recipes (under 30 minutes)
const quickRecipes = allRecipes.filter(recipe => {
  const totalTime = recipe.data.timing?.totalTime || recipe.data.timing?.cookTime;
  if (!totalTime) return false;
  const match = totalTime.match(/PT(\d+)M/);
  if (!match) return false;
  const minutes = parseInt(match[1]);
  return minutes <= 30;
}).slice(0, 8);

// Dessert recipes
const dessertRecipes = allRecipes.filter(recipe =>
  recipe.data.taxonomy?.categories?.includes("Dessert") ||
  recipe.data.taxonomy?.categories?.includes("S√º√üspeise") ||
  recipe.data.taxonomy?.categories?.includes("Pl√§tzchen/Kekse")
).slice(0, 6);

// Breakfast recipes
const breakfastRecipes = allRecipes.filter(recipe =>
  recipe.data.taxonomy?.categories?.includes("Fr√ºhst√ºck")
).slice(0, 6);

// Main course recipes
const mainCourseRecipes = allRecipes.filter(recipe =>
  recipe.data.taxonomy?.categories?.includes("Hauptgericht")
).slice(0, 6);

// Snack recipes
const snackRecipes = allRecipes.filter(recipe =>
  recipe.data.taxonomy?.categories?.includes("Vorspeise") ||
  recipe.data.taxonomy?.categories?.includes("Snack")
).slice(0, 6);

// Mock popular recipes for "Most Loved" section (will be replaced with real data)
const mockPopularRecipes = [
  { slug: 'omas-plaetzchen', title: 'Omas Pl√§tzchen', image: '/images/recipes/omas-plaetzchen/omas-weihnachtsplaetzchen-ausstecher-rezept.jpg' },
  { slug: 'fake-spaghetti-carbonara', title: 'Spaghetti Carbonara', image: 'https://picsum.photos/1200/800?random=1' },
  { slug: 'fake-lasagne-bolognese', title: 'Lasagne Bolognese', image: 'https://picsum.photos/1200/800?random=3' },
  { slug: 'fake-pizza-margherita', title: 'Pizza Margherita', image: 'https://picsum.photos/1200/800?random=4' },
  { slug: 'fake-schnitzel', title: 'Wiener Schnitzel', image: 'https://picsum.photos/1200/800?random=5' },
  { slug: 'fake-tiramisu', title: 'Tiramisu', image: 'https://picsum.photos/1200/800?random=6' },
];

// Editors Selection (reversed popular recipes)
const editorsSelection = [...mockPopularRecipes].reverse().slice(0, 6);

// Categories for "Browse by Categories"
const categories = [
  { name: 'Suppe', icon: 'ü•£' },
  { name: 'Vorspeise', icon: 'ü•ó' },
  { name: 'Fr√ºhst√ºck', icon: 'ü•û' },
  { name: 'Dessert', icon: 'üç∞' },
  { name: 'Hauptgericht', icon: 'üçù' },
  { name: 'Backen', icon: 'üçû' },
  { name: 'Pl√§tzchen/Kekse', icon: 'üç™' },
  { name: 'Fleisch', icon: 'ü•©' },
  { name: 'Fisch', icon: 'üêü' },
  { name: 'Vegetarisch', icon: 'ü•ï' },
];

// Helper function to parse duration
function parseDuration(duration?: string): string {
  if (!duration) return '';
  const match = duration.match(/PT(\d+)M/);
  return match ? `${match[1]} min` : '';
}

// Difficulty mapping
const difficultyMap: Record<string, string> = {
  einfach: "Einfach",
  mittel: "Mittel",
  schwer: "Fortgeschritten",
};

// Frontmatter
const frontmatter = {
  title: "Die Mama kocht - Leckere Rezepte f√ºr jeden Tag",
  metaDescription: "Entdecke leckere Rezepte f√ºr jeden Anlass. Von schnellen Gerichten bis zu aufwendigen Desserts - hier findest du dein n√§chstes Lieblingsrezept.",
  metaKeywords: "Rezepte, Kochen, Backen, Food Blog, Deutsch, Vegetarisch, Desserts",
};
---

<BaseLayout frontmatter={frontmatter}>
  <!-- Hero Slider Section -->
  <section class="hero-slider mb-12 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {heroRecipes.map((recipe, index) => (
          <a
            href={`/rezepte/${recipe.data.metadata?.slug}`}
            class={`relative overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 group ${index === 0 ? 'md:col-span-2 md:row-span-2' : ''}`}
          >
            <div class={`relative ${index === 0 ? 'h-[500px]' : 'h-[240px]'}`}>
              {recipe.data.images?.featured?.src && (
                <Image
                  src={recipe.data.images.featured.src}
                  alt={recipe.data.images.featured.alt || recipe.data.metadata?.title || ''}
                  width={index === 0 ? 1200 : 600}
                  height={index === 0 ? 800 : 400}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading={index === 0 ? 'eager' : 'lazy'}
                />
              )}
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                {recipe.data.taxonomy?.categories?.[0] && (
                  <span class="inline-block bg-accent px-3 py-1 text-xs font-semibold uppercase tracking-wide rounded mb-3">
                    {recipe.data.taxonomy.categories[0]}
                  </span>
                )}
                <h3 class={`font-bold leading-tight ${index === 0 ? 'text-3xl mb-3' : 'text-xl mb-2'}`}>
                  {recipe.data.metadata?.title}
                </h3>
                {index === 0 && recipe.data.metadata?.description && (
                  <p class="text-sm opacity-90 line-clamp-2">{recipe.data.metadata.description}</p>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Main Content (2/3) -->
      <div class="lg:col-span-2 space-y-16">

        <!-- Latest Recipes Section -->
