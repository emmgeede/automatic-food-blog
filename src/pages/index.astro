                  <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 hover:text-accent transition-colors">
                      {recipe.data.metadata?.title}
                    </h3>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </section>

