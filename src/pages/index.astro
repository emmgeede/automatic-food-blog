        {dessertRecipes.length > 0 && (
          <section>
            <div class="flex items-center justify-between mb-8">
              <h2 class="text-3xl font-bold text-gray-900">K√∂stliche Desserts</h2>
              <a href={getCategoryUrl('Dessert')} class="text-accent hover:text-accent-dark font-semibold">
                Alle anzeigen ‚Üí
              </a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {dessertRecipes.map((recipe, index) => (
                <article class="flex gap-4 bg-white rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
