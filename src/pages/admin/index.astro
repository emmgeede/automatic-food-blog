---
/**
 * Admin Dashboard
 * Requires Google OAuth authentication
 */
import BaseLayout from "../../layouts/BaseLayout.astro";

const frontmatter = {
  title: "Admin Dashboard - Die Mama kocht",
  metaDescription: "Admin-Bereich für Kommentarverwaltung",
  metaCanonical: Astro.url.href,
};

---

<BaseLayout frontmatter={frontmatter}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Login Screen (shown by default, hidden by JS if authenticated) -->
    <div id="login-screen" class="max-w-md mx-auto">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2 text-center">Admin Login</h1>
        <p class="text-gray-600 mb-8 text-center">
          Melde dich mit deinem Google-Account an
        </p>

        <button
          id="google-login-btn"
          class="w-full bg-accent hover:bg-primary text-white font-semibold py-3 px-6 rounded-lg transition-all flex items-center justify-center gap-3 shadow-md hover:shadow-lg"
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          Mit Google anmelden
        </button>

        <p class="text-sm text-gray-500 mt-6 text-center">
          Nur autorisierte Administratoren können sich anmelden
        </p>
      </div>
    </div>

    <!-- Admin Dashboard (hidden by default, shown by JS if authenticated) -->
    <div id="admin-dashboard" style="display: none;">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Kommentare verwalten</h1>
        <div class="flex items-center gap-4">
          <!-- User Info -->
          <div class="flex items-center gap-3 px-4 py-2 bg-gray-50 rounded-lg border border-gray-200">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <div class="text-sm">
              <p class="font-semibold text-gray-900" id="user-name">Lade...</p>
              <p class="text-gray-500 text-xs" id="user-email">-</p>
            </div>
          </div>
          <!-- Logout Button -->
          <button
            id="logout-btn"
            class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded-lg transition-colors"
          >
            Abmelden
          </button>
        </div>
      </div>

      <div id="comments-dashboard">
        <div class="text-center py-12">
          <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-accent"></div>
          <p class="mt-4 text-gray-600">Lade Kommentare...</p>
        </div>
      </div>
    </div>

    <!-- Reply Modal (hidden by default) -->
    <div id="reply-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden flex items-center justify-center z-50">
      <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4">
        <div class="p-6">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-2xl font-bold text-gray-900">Auf Kommentar antworten</h2>
            <button id="close-modal" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>

          <div class="mb-4">
            <p class="text-sm text-gray-600">Antwort an: <span id="reply-author" class="font-semibold"></span></p>
          </div>

          <div class="mb-6">
            <label for="reply-text" class="block text-sm font-medium text-gray-700 mb-2">
              Deine Antwort
            </label>
            <textarea
              id="reply-text"
              rows="6"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent"
              placeholder="Schreibe deine Antwort hier..."
            ></textarea>
            <p class="mt-1 text-sm text-gray-500">Markdown wird unterstützt</p>
          </div>

          <div class="flex justify-end gap-3">
            <button
              id="cancel-reply"
              class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold rounded-lg transition-colors"
            >
              Abbrechen
            </button>
            <button
              id="submit-reply"
              class="px-4 py-2 bg-accent hover:bg-primary text-white font-semibold rounded-lg transition-colors"
            >
              Antwort senden
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Check if user is authenticated via API (since cookie is HttpOnly)
  async function checkAuthentication() {
    try {
      console.log('Checking authentication via API...');
      const response = await fetch('/api/auth/check');
      const data = await response.json();
      console.log('Authentication check result:', data.isAuthenticated);
      return data.isAuthenticated;
    } catch (error) {
      console.error('Authentication check failed:', error);
      return false;
    }
  }

  // Show/hide screens based on authentication
  const loginScreen = document.getElementById('login-screen');
  const adminDashboard = document.getElementById('admin-dashboard');

  // Extract user info from admin token
  function getUserInfo() {
    try {
      const cookie = document.cookie;
      const token = cookie.split('admin_token=')[1]?.split(';')[0];
      if (!token) return null;

      const decoded = JSON.parse(atob(token));
      return {
        name: decoded.name || 'Admin',
        email: decoded.email || '',
      };
    } catch {
      return null;
    }
  }

  // Update user info in header
  function updateUserInfo() {
    const userInfo = getUserInfo();
    if (userInfo) {
      const nameEl = document.getElementById('user-name');
      const emailEl = document.getElementById('user-email');
      if (nameEl) nameEl.textContent = userInfo.name;
      if (emailEl) emailEl.textContent = userInfo.email;
    }
  }

  // Check authentication on page load
  (async () => {
    const isAuthenticated = await checkAuthentication();

    if (isAuthenticated) {
      console.log('User is authenticated, showing admin dashboard');
      loginScreen.style.display = 'none';
      adminDashboard.style.display = 'block';
      updateUserInfo();
      loadComments();
    } else {
      console.log('User is not authenticated, showing login screen');
      loginScreen.style.display = 'block';
      adminDashboard.style.display = 'none';
    }
  })();

  // Login button handler
  const googleLoginBtn = document.getElementById('google-login-btn');
  if (googleLoginBtn) {
    googleLoginBtn.addEventListener('click', async (e) => {
      e.preventDefault();
      console.log('Login button clicked, fetching OAuth URL...');

      try {
        const response = await fetch('/api/auth/google/login');
        const data = await response.json();

        if (data.redirectUrl) {
          console.log('Redirecting to:', data.redirectUrl);
          window.location.href = data.redirectUrl;
        } else {
          console.error('No redirect URL received');
          alert('Login fehlgeschlagen: Keine Redirect-URL erhalten');
        }
      } catch (error) {
        console.error('Login error:', error);
        alert('Login fehlgeschlagen: ' + error.message);
      }
    });
  }

  // Logout button handler
  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', async () => {
      console.log('Logging out...');
      await fetch('/api/auth/logout', { method: 'POST' });
      window.location.reload();
    });
  }

  async function loadComments() {
    try {
      const response = await fetch('/api/admin/comments');
      const data = await response.json();

      console.log('Received comments:', data.comments);
      if (data.comments && data.comments.length > 0) {
        console.log('First comment structure:', data.comments[0]);
      }

      const dashboard = document.getElementById('comments-dashboard');
      if (dashboard) {
        renderCommentsDashboard(dashboard, data.comments || []);
      }
    } catch (error) {
      console.error('Error loading comments:', error);
      const dashboard = document.getElementById('comments-dashboard');
      if (dashboard) {
        dashboard.innerHTML = `
          <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
            <p class="text-red-800">Fehler beim Laden der Kommentare</p>
            <p class="text-red-600 text-sm mt-2">${error.message}</p>
          </div>
        `;
      }
    }
  }

  function renderCommentsDashboard(container, comments) {
    const html = `
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <!-- Search and Filter -->
        <div class="p-4 bg-gray-50 border-b">
          <div class="flex gap-4">
            <input
              type="text"
              id="search-input"
              placeholder="Suche nach Autor, Text oder Rezept..."
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent"
            />
            <select
              id="recipe-filter"
              class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent"
            >
              <option value="">Alle Rezepte</option>
              ${getUniqueRecipes(comments).map(recipe => `
                <option value="${recipe}">${recipe}</option>
              `).join('')}
            </select>
          </div>
          <div class="mt-4 flex items-center justify-between">
            <p class="text-sm text-gray-600">
              <span id="comments-count">${comments.length}</span> Kommentare gesamt
            </p>
            <button
              id="bulk-delete-btn"
              class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
              disabled
            >
              Ausgewählte löschen (<span id="selected-count">0</span>)
            </button>
          </div>
        </div>

        <!-- Comments Table -->
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left">
                  <input type="checkbox" id="select-all" class="rounded border-gray-300 text-accent focus:ring-accent" />
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Autor</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kommentar</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rezept</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Datum</th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Aktionen</th>
              </tr>
            </thead>
            <tbody id="comments-tbody" class="bg-white divide-y divide-gray-200">
              ${renderCommentRows(comments)}
            </tbody>
          </table>
        </div>
      </div>
    `;

    container.innerHTML = html;
    attachEventListeners(comments);
  }

  function getUniqueRecipes(comments) {
    const recipes = new Set();
    comments.forEach(comment => {
      const url = comment.locator?.url || '';
      const recipeName = url.split('/').pop() || 'Unbekannt';
      recipes.add(recipeName);
    });
    return Array.from(recipes).sort();
  }

  function renderCommentRows(comments) {
    return comments.map(comment => {
      console.log('Rendering comment:', comment);

      // Try different possible field names
      const url = comment.locator?.url || comment.loc?.url || comment.url || '';
      const recipeName = url.split('/').filter(Boolean).pop() || 'Unbekannt';

      // Handle both ISO string and Unix timestamp
      let date = 'Invalid Date';
      if (comment.time) {
        try {
          date = new Date(comment.time).toLocaleDateString('de-DE');
        } catch (e) {
          console.error('Failed to parse date:', comment.time, e);
        }
      }

      const author = comment.user?.name || comment.name || 'Anonym';
      const text = comment.text || comment.orig || '';

      // Check if this is a reply
      const isReply = comment.isReply || comment.pid;
      const depth = comment.depth || 0;
      const indentClass = isReply ? `pl-${Math.min(depth * 4, 12)}` : '';
      const replyBadge = isReply ? '<span class="text-xs text-gray-500 ml-2">↳ Antwort</span>' : '';

      return `
        <tr data-comment-id="${comment.id}" class="hover:bg-gray-50 ${isReply ? 'bg-blue-50/30' : ''}">
          <td class="px-4 py-4">
            <input type="checkbox" class="comment-checkbox rounded border-gray-300 text-accent focus:ring-accent" value="${comment.id}" />
          </td>
          <td class="px-4 py-4 whitespace-nowrap ${indentClass}">
            <div class="flex items-center">
              ${isReply ? '<svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/></svg>' : ''}
              <div class="text-sm font-medium text-gray-900">${author}${replyBadge}</div>
            </div>
          </td>
          <td class="px-4 py-4">
            <div class="text-sm text-gray-900 max-w-md truncate">${text}</div>
          </td>
          <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
            ${recipeName}
          </td>
          <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
            ${date}
          </td>
          <td class="px-4 py-4 whitespace-nowrap text-right text-sm font-medium">
            <button
              class="text-blue-600 hover:text-blue-900 reply-btn mr-4"
              data-comment-id="${comment.id}"
              data-comment-url="${url}"
              data-comment-author="${author}"
            >
              Antworten
            </button>
            <button
              class="text-red-600 hover:text-red-900 delete-btn"
              data-comment-id="${comment.id}"
              data-comment-url="${url}"
            >
              Löschen
            </button>
          </td>
        </tr>
      `;
    }).join('');
  }

  function attachEventListeners(comments) {
    // Search functionality
    const searchInput = document.getElementById('search-input');
    const recipeFilter = document.getElementById('recipe-filter');

    function filterComments() {
      const searchTerm = searchInput?.value.toLowerCase() || '';
      const selectedRecipe = recipeFilter?.value || '';

      const filtered = comments.filter(comment => {
        const matchesSearch = !searchTerm ||
          (comment.user?.name || '').toLowerCase().includes(searchTerm) ||
          (comment.text || '').toLowerCase().includes(searchTerm);

        const matchesRecipe = !selectedRecipe ||
          (comment.locator?.url || '').includes(selectedRecipe);

        return matchesSearch && matchesRecipe;
      });

      const tbody = document.getElementById('comments-tbody');
      if (tbody) {
        tbody.innerHTML = renderCommentRows(filtered);
        attachDeleteListeners();
      }

      const countEl = document.getElementById('comments-count');
      if (countEl) {
        countEl.textContent = filtered.length;
      }
    }

    searchInput?.addEventListener('input', filterComments);
    recipeFilter?.addEventListener('change', filterComments);

    // Select all checkbox
    const selectAll = document.getElementById('select-all');
    selectAll?.addEventListener('change', (e) => {
      const checkboxes = document.querySelectorAll('.comment-checkbox');
      checkboxes.forEach(cb => {
        cb.checked = e.target.checked;
      });
      updateBulkDeleteButton();
    });

    // Individual checkboxes
    document.addEventListener('change', (e) => {
      if (e.target.classList.contains('comment-checkbox')) {
        updateBulkDeleteButton();
      }
    });

    // Bulk delete button
    const bulkDeleteBtn = document.getElementById('bulk-delete-btn');
    bulkDeleteBtn?.addEventListener('click', handleBulkDelete);

    // Individual delete buttons
    attachDeleteListeners();
  }

  function attachDeleteListeners() {
    const deleteButtons = document.querySelectorAll('.delete-btn');
    deleteButtons.forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const commentId = btn.dataset.commentId;
        const commentUrl = btn.dataset.commentUrl;
        if (confirm('Möchtest du diesen Kommentar wirklich löschen?')) {
          await deleteComment(commentId, true, commentUrl);
        }
      });
    });

    // Attach reply listeners
    const replyButtons = document.querySelectorAll('.reply-btn');
    replyButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const commentId = btn.dataset.commentId;
        const commentUrl = btn.dataset.commentUrl;
        const commentAuthor = btn.dataset.commentAuthor;
        openReplyModal(commentId, commentUrl, commentAuthor);
      });
    });
  }

  function updateBulkDeleteButton() {
    const checkboxes = document.querySelectorAll('.comment-checkbox:checked');
    const bulkDeleteBtn = document.getElementById('bulk-delete-btn');
    const selectedCount = document.getElementById('selected-count');

    if (bulkDeleteBtn && selectedCount) {
      bulkDeleteBtn.disabled = checkboxes.length === 0;
      selectedCount.textContent = checkboxes.length;
    }
  }

  async function handleBulkDelete() {
    const checkboxes = document.querySelectorAll('.comment-checkbox:checked');
    const commentData = Array.from(checkboxes).map(cb => ({
      id: cb.value,
      url: cb.closest('tr')?.querySelector('.delete-btn')?.dataset.commentUrl || ''
    }));

    if (commentData.length === 0) return;

    if (!confirm(`Möchtest du wirklich ${commentData.length} Kommentar(e) löschen?`)) return;

    for (const comment of commentData) {
      await deleteComment(comment.id, false, comment.url);
    }

    // Reload after bulk delete
    loadComments();
  }

  async function deleteComment(commentId, reload = true, commentUrl = '') {
    try {
      // Add URL as query parameter
      const urlParam = commentUrl ? `?url=${encodeURIComponent(commentUrl)}` : '';
      const response = await fetch(`/api/admin/comments/${commentId}${urlParam}`, {
        method: 'DELETE',
      });

      if (response.ok) {
        if (reload) {
          loadComments();
        }
      } else {
        const error = await response.json().catch(() => ({}));
        console.error('Delete failed:', error);
        alert('Fehler beim Löschen des Kommentars: ' + (error.error || 'Unbekannter Fehler'));
      }
    } catch (error) {
      console.error('Error deleting comment:', error);
      alert('Fehler beim Löschen des Kommentars');
    }
  }

  // Reply Modal functionality
  let currentReplyData = { commentId: '', url: '', author: '' };

  function openReplyModal(commentId, url, author) {
    currentReplyData = { commentId, url, author };

    const modal = document.getElementById('reply-modal');
    const authorSpan = document.getElementById('reply-author');
    const textArea = document.getElementById('reply-text');

    if (modal && authorSpan && textArea) {
      authorSpan.textContent = author;
      textArea.value = '';
      modal.classList.remove('hidden');
      textArea.focus();
    }
  }

  function closeReplyModal() {
    const modal = document.getElementById('reply-modal');
    const textArea = document.getElementById('reply-text');

    if (modal && textArea) {
      modal.classList.add('hidden');
      textArea.value = '';
      currentReplyData = { commentId: '', url: '', author: '' };
    }
  }

  async function submitReply() {
    const textArea = document.getElementById('reply-text');
    const submitBtn = document.getElementById('submit-reply');

    if (!textArea || !submitBtn) return;

    const text = textArea.value.trim();

    if (!text) {
      alert('Bitte gib eine Antwort ein');
      return;
    }

    // Disable button during submission
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sende...';

    try {
      const response = await fetch('/api/admin/comments/reply', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          commentId: currentReplyData.commentId,
          text: text,
          url: currentReplyData.url,
        }),
      });

      if (response.ok) {
        closeReplyModal();
        loadComments(); // Reload to show new reply
      } else {
        const error = await response.json().catch(() => ({}));
        console.error('Reply failed:', error);
        alert('Fehler beim Senden der Antwort: ' + (error.error || 'Unbekannter Fehler'));
      }
    } catch (error) {
      console.error('Error submitting reply:', error);
      alert('Fehler beim Senden der Antwort');
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Antwort senden';
    }
  }

  // Modal event listeners
  document.getElementById('close-modal')?.addEventListener('click', closeReplyModal);
  document.getElementById('cancel-reply')?.addEventListener('click', closeReplyModal);
  document.getElementById('submit-reply')?.addEventListener('click', submitReply);

  // Close modal on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeReplyModal();
    }
  });

  // Close modal when clicking outside
  document.getElementById('reply-modal')?.addEventListener('click', (e) => {
    if (e.target.id === 'reply-modal') {
      closeReplyModal();
    }
  });
</script>

<style>
  .animate-spin {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
