---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { frontmatter = {} } = Astro.props;

// Check if search engine indexing is allowed
const allowIndexing = import.meta.env.PUBLIC_ALLOW_INDEXING === 'true';
const robotsContent = allowIndexing
  ? "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
  : "noindex, nofollow";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{frontmatter.title}</title>
    <meta name="title" content={frontmatter.title} />
    <meta name="description" content={frontmatter.metaDescription} />
    {frontmatter.metaKeywords && <meta name="keywords" content={frontmatter.metaKeywords} />}
    <meta name="robots" content={robotsContent} />
    <link rel="canonical" href={frontmatter.metaCanonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={frontmatter.ogType || "website"} />
    <meta property="og:url" content={frontmatter.metaCanonical} />
    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:description" content={frontmatter.metaDescription} />
    <meta property="og:image" content={frontmatter.featuredImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="Die Mama kocht" />
    {frontmatter.ogType === "article" && (
      <>
        {frontmatter.pubDate && <meta property="article:published_time" content={frontmatter.pubDate} />}
        {frontmatter.modifiedDate && <meta property="article:modified_time" content={frontmatter.modifiedDate} />}
        {frontmatter.author && <meta property="article:author" content={frontmatter.author} />}
        {frontmatter.section && <meta property="article:section" content={frontmatter.section} />}
        {frontmatter.slug && <meta property="article:slug" content={frontmatter.slug} />}
      </>
    )}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={frontmatter.metaCanonical} />
    <meta property="twitter:title" content={frontmatter.title} />
    <meta property="twitter:description" content={frontmatter.metaDescription} />
    <meta property="twitter:image" content={frontmatter.featuredImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Performance Optimizations -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    {import.meta.env.PUBLIC_REMARK42_URL && (
      <link rel="dns-prefetch" href={import.meta.env.PUBLIC_REMARK42_URL} />
    )}

    <!-- Theme Color for Mobile Browsers -->
    <meta name="theme-color" content="#e74c3c" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <slot name="head" />
  </head>
  <body>
    <!-- Skip Links fÃ¼r Accessibility -->
    <a href="#main-content" class="skip-link">Zum Hauptinhalt springen</a>
    <a href="#navigation" class="skip-link">Zur Navigation springen</a>

    <Header />
    <main id="main-content" class="container mx-auto" tabindex="-1">
      <slot />
    </main>
    <Footer />

    <style>
      .skip-link {
        position: absolute;
        top: -40px;
        left: 0;
        background: var(--color-accent);
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        font-weight: bold;
        z-index: 100;
        border-radius: 0 0 4px 0;
      }

      .skip-link:focus {
        top: 0;
      }
    </style>
  </body>
</html>
